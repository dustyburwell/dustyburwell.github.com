*
  margin 0
  padding 0

body
  color #666
  font-family 'Lora', serif

  header, h1, h2, h3, h4, h5, h6
    font-family 'Oxygen', sans-serif
    line-height 1.5em
    margin-bottom 15px

    a
      text-decoration none
      color #111

  h1
    font-size 48px
    text-shadow 0px 0px 4px #333
    margin-top 10px

  &>header
    background-image url(../img/chicago.jpg)
    background-size 100%
    background-repeat no-repeat
    background-attachment fixed

    color #e9e9e9

    margin-bottom 0

    img
      border-radius 100%
      border 4px solid #e9e9e9

    nav ul li
      display inline
      font-size 20px
      text-shadow 0px 0px 4px #333

      a
        text-decoration none
        color #e9e9e9

      &:not(:last-child):after
        content "â€¢"
        margin-left 1em
        margin-right 1em

.main-content
  margin 0
  padding-top 50px
  padding-bottom 50px
  background white

  .hfeed
    max-width 760px
    margin 0 auto

    article
      line-height 1.5em
      font-size 1.2em
      letter-spacing .07em

      a
        color #333

      p
        margin-bottom 15px

        img
          max-width 100%

      section
        margin-bottom 35px

      code
        white-space nowrap
        color #F65552

body.index

  &>header
    padding-top 250px
    padding-bottom 25px
    text-align center

    img
      margin 0 auto
      width 100px
      height 100px

body.post

  &>header
    padding-top 10px
    padding-bottom 10px

    .header-content
      max-width 760px
      margin 0 auto

      h1
        display none

      img
        width 50px
        height 50px
        vertical-align middle

      nav
        margin-left 20px
        position relative
        top 5px

      nav, nav ul
        display inline

@media screen and (max-width: 780px)
  body.post, body.index
    &>header
      padding-top 10px
      background-size 760px
      width 100%

      .header-content
        margin 0 15px

    .main-content
      padding-top 20px
      margin 0 15px
      width auto

@media screen and (max-width: 400px)
  body.post, body.index
    h1
      font-size 36px

    &>header
      padding-top 10px
      background-size 760px
      text-align center

      .header-content
        nav
          margin-left 0

          ul li
            display block

            &:after
              content none

    .main-content
      padding-top 20px
      margin 0 15px
      width auto
